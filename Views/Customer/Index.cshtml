@model IEnumerable<MVCCoreAppExample.Models.Customer>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table table-striped table-bordered nowrap" style="width:100%" id="customertable">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Company Name</th>
            <th>Email Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.CompanyName</td>
                <td>@customer.EmailAddress</td>                
            </tr>
        }
    </tbody>
</table>

<script>
    $('#customertable').DataTable();
</script>